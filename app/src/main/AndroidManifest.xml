<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.danflr.easyfood">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".IngredientsActivity">
        </activity>
        <activity android:name=".UserIngredientsActivity">
        </activity>
        <activity android:name=".ProfileActivity">
        </activity>
        <activity android:name=".ShoppingListActivity">
        </activity>
        <activity android:name=".RegisterActivity">
        </activity>
        <activity
                android:name=".SettingsActivity"
                android:label="@string/activity_settings">
        </activity>
        <activity android:name=".RecipeDetailActivity">
        </activity>
        <activity android:name=".RecipesActivity">
        </activity>
        <activity
                android:name=".MainActivity"
                android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <meta-data
                android:name="preloaded_fonts"
                android:resource="@array/preloaded_fonts"/>
    </application>

</manifest>